<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="simpleBloggerConfig" class="es.isendev.blog.util.SimpleBloggerConfig" >
		<property name="blogTitle" value="isendev.com"/>
		<property name="blogFootMessage" value="Coded by isendev / 2020 / SimpleBlogger Engine v.0.4.10"/>
		<property name="blogUrl" value="https://www.isendev.com"/>
		<!-- <property name="blogUrl" value="http://localhost:8080"/> -->		
		<property name="rssFeedDescription" value="isendev.com blog RSS feed"/>
		<property name="entriesPerPage" value="4"/>
		<property name="myTwitterUrl" value="https://twitter.com/isendev"/>
		<property name="myInstagramUrl" value="http://instagram.com/aperdices"/>
	</bean>

</beans>
